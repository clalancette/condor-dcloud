######################################################################
# build
######################################################################
print "$execstr\n";
$buildstatus = system($execstr);

# now check the build status and return appropriately
if( $buildstatus == 0 ) {
    print "Building $taskname: SUCCESS\n";
    exit 0;
}

print "Building $taskname: FAILURE ($buildstatus)\n";
